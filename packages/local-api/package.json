{
    "name": "local-api",
    "version": "1.0.0",
    "private": true,
    "main": "index.js",
    "scripts": {
        "start": "export $(xargs < ./.env.local) && webpack && concurrently \"yarn dev:nodemon\" \"yarn dev:watch\"",
        "build": "cross-env-shell NODE_ENV=production webpack && yarn copy",
        "clean": "rimraf ./build",
        "prestart": "yarn clean && kill-port 5000",
        "prebuild": "yarn clean",
        "test": "cross-env-shell CI=true jest -c ./jest.config.js --coverage",
        "format": "prettier --write \"./{datasources,schema,}/*.{js,ts,jsx,tsx,json,css,md}\"",
        "dev:watch": "webpack --watch",
        "dev:nodemon": "nodemon ./build/server.bundle.js",
        "lint": "eslint . --ext ts"
    },
    "devDependencies": {
        "@babel/cli": "^7.4.3",
        "@babel/core": "^7.17.8",
        "@babel/node": "^7.2.2",
        "@babel/plugin-proposal-class-properties": "^7.4.0",
        "@babel/plugin-transform-classes": "^7.5.5",
        "@babel/plugin-transform-runtime": "^7.5.5",
        "@babel/preset-env": "^7.4.3",
        "@babel/preset-typescript": "^7.3.3",
        "@types/express": "^4.17.13",
        "@types/jest": "^23.3.14",
        "@types/node": "^17.0.23",
        "babel-loader": "^8.0.6",
        "concurrently": "^7.0.0",
        "cpr": "^3.0.1",
        "cross-env": "^7.0.3",
        "jest": "^25.5.4",
        "jest-sonar-reporter": "^2.0.0",
        "kill-port": "^1.6.1",
        "node-dev": "^7.4.0",
        "nodemon": "^2.0.15",
        "prettier": "^2.6.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^25.3.0",
        "ts-loader": "^6.0.4",
        "webpack": "^4.38.0",
        "webpack-cli": "^3.3.6",
        "webpack-node-externals": "^1.0.2",
        "wrapper-webpack-plugin": "^2.1.0"
    },
    "dependencies": {
        "@babel/runtime": "^7.5.5",
        "core-js": "^3.1.4",
        "debug": "^3.2.6",
        "dotenv": "^16.0.0",
        "encoding": "^0.1.13",
        "express": "^4.17.1",
        "regenerator-runtime": "^0.13.9",
        "source-map-support": "^0.5.21",
        "typescript": "^3.2.4"
    },
    "jestSonar": {
        "reportPath": "coverage",
        "reportFile": "test-reporter.xml",
        "indent": 4
    }
}
